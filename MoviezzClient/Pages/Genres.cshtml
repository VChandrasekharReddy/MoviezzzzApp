@page
@model MoviezzClient.Pages.GanresModel
@{
    ViewData["Title"] = "Genres";
}

<h2>Add Genre</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Ganres.GenresName" class="form-label">Genre Name</label>
        <input asp-for="Ganres.GenresName" class="form-control" placeholder="Enter genre name" />
        <span asp-validation-for="Ganres.GenresName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Genre</button>
</form>

<hr />

<h3>Existing Genres</h3>

@if (Model.ganres != null && Model.ganres.Any())
{
    <ul class="list-group">
        @foreach (var genre in Model.ganres)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @if (Model.Ganres.GenresId == genre.GenresId)
                {
                    <form method="post" asp-page-handler="Update">
                        <input type="hidden" asp-for="Ganres.GenresId" value="@genre.GenresId" />
                        <input type="text" asp-for="Ganres.GenresName" class="form-control me-2" value="@genre.GenresName" />
                        <button type="submit" class="btn btn-success btn-sm me-1">Submit</button>
                        <button type="submit" name="cancel" value="true" class="btn btn-secondary btn-sm">Cancel</button>
                    </form>
                }
                else
                {
                    <span>@genre.GenresName</span>
                    <form method="post" asp-page-handler="Edit" class="d-inline">
                        <input type="hidden" name="GenresId" value="@genre.GenresId" />
                        <button type="submit" class="btn btn-warning btn-sm">Update</button>
                    </form>
                }
            </li>
        }
    </ul>
}
else
{
    <p>No genres found.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
