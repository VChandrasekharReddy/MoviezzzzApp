@page "/MovieDetails/{id}"

@model MoviezzClient.Pages.MovieDetailsModel
@{
    ViewData["Title"] = "Movie Details";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #1a0b2e 0%, #2d1b4e 50%, #4a1c5c 100%);
            min-height: 100vh;
            width:100vw;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .movie-details-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        .movie-header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(15px);
            border-radius: 10px;
            padding: 20px;
            width: 94%;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            display: flex;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .movie-main-content {
            display: flex;
            width: 100%;
            font-size: 20px;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .movie-poster-container {
            position: relative;
            margin: 10px;
            display: flex;
            height: 450px;
            width: 250px;
            border-radius: 7px;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .movie-poster {
            height: 450px;
            width: 250px;
            object-fit: cover;
            border-radius: 7px;
            background-position: center;
            background-size: cover;
            transition: transform 0.4s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

            .movie-poster:hover {
                transform: scale(1.05);
            }

        .movie-info {
            padding: 10px 0;
            width: 60%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding: 10px;
        }

        .movie-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 10px 0px;
            background: linear-gradient(45deg, #ff6b9d, #c44569);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 2px 2px 4px rgba(196, 69, 105, 0.3);
        }

        .movie-rating {
            display: flex;
            align-items: center;
            margin: 0px 0 10px 0;
            color: #fff;
            font-size: 1.2rem;
        }

        .rating-stars {
            color: #ffd700;
        }

        .rating-value {
            font-weight: 600;
            margin-right: 5px;
            color: #ff6b9d;
            font-size: 15px;
            background: linear-gradient(45deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6));
            padding: 5px 15px;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-self: center;
            border: 1px solid rgba(255, 107, 157, 0.3);
        }

        .movie-grade {
            background: linear-gradient(45deg, #ff6b9d, #c44569);
            color: #fff;
            padding: 5px 10px;
            font-size: 15px;
            border-radius: 5px;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(255, 107, 157, 0.3);
        }

        .movie-meta {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 10px;
            margin-bottom: 10px;
        }

        .meta-item {
            background: rgba(255, 255, 255, 0.08);
            padding: 5px;
            border-radius: 10px;
            border-left: 4px solid #00d4aa;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .meta-item:hover {
                background: rgba(255, 255, 255, 0.15);
                transform: translateX(8px);
                box-shadow: 0 8px 25px rgba(0, 212, 170, 0.2);
            }

        .meta-label {
            font-weight: 600;
            color: #00d4aa;
            margin-bottom: 8px;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .meta-value {
            font-size: 0.7rem;
            color: #fff;
            font-weight: 500;
        }

        .movie-description {
            background: rgba(255, 255, 255, 0.08);
            padding: 10px;
            font-size: 15px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            transition: all 0.3s ease;
        }

            .movie-description:hover {
                background: rgba(255, 255, 255, 0.12);
                border-color: rgba(255, 107, 157, 0.3);
            }

        .description-title {
            font-size: 20px;
            font-weight: 600;
            color: #ff6b9d;
        }

        .description-text {
            line-height: 1.7;
            font-size: 10px;
            color: rgba(255, 255, 255, 0.9);
        }

        .genres-container {
            margin-bottom: 30px;
            width: 90%;
            padding: 0;
            margin: 10px 0;
        }

        .genres-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: #ff6b9d;
        }

        .genres-list {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }

        .genre-tag {
            background: rgba(255, 107, 157, 0.2);
            color: #ff6b9d;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            font-weight: 500;
            border: 1px solid rgba(255, 107, 157, 0.3);
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .genre-tag:hover {
                background: rgba(255, 107, 157, 0.3);
                transform: scale(1.05);
                box-shadow: 0 4px 15px rgba(255, 107, 157, 0.2);
            }

        .cast-section {
            margin-top: 50px;
        }

        .cast-title {
            font-size: 2.2rem;
            font-weight: 600;
            margin-bottom: 30px;
            background: linear-gradient(45deg, #ff6b9d, #c44569);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-align: center;
        }

        .cast-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
        }

        .cast-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            transition: all 0.4s ease;
            border: 1px solid rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            cursor: pointer;
        }

            .cast-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 20px 40px rgba(255, 107, 157, 0.2);
                border-color: #ff6b9d;
                background: rgba(255, 255, 255, 0.15);
            }

        .cast-photo {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            object-fit: cover;
            margin: 0 auto 15px;
            border: 4px solid #ff6b9d;
            transition: all 0.3s ease;
        }

        .cast-card:hover .cast-photo {
            transform: scale(1.1);
            border-color: #00d4aa;
        }

        .default-avatar {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background: linear-gradient(45deg, #ff6b9d 0%, #c44569 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 2.2rem;
            color: white;
            border: 4px solid #ff6b9d;
            transition: all 0.3s ease;
        }

        .cast-card:hover .default-avatar {
            transform: scale(1.1);
            border-color: #00d4aa;
            background: linear-gradient(45deg, #00d4aa 0%, #ff6b9d 100%);
        }

        .cast-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 12px;
            color: #ff6b9d;
            transition: color 0.3s ease;
        }

        .cast-card:hover .cast-name {
            color: #00d4aa;
        }

        .cast-roles {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            justify-content: center;
            margin-bottom: 15px;
        }

        .role-badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            color: #fff;
            transition: all 0.3s ease;
        }

        .cast-card:hover .role-badge {
            background: rgba(0, 212, 170, 0.3);
            color: #00d4aa;
        }

        .cast-bio {
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.5;
            margin-top: 10px;
            transition: color 0.3s ease;
        }

        .cast-card:hover .cast-bio {
            color: rgba(255, 255, 255, 0.9);
        }

        .no-cast {
            text-align: center;
            padding: 50px;
            color: rgba(255, 255, 255, 0.7);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            background: rgba(255, 107, 157, 0.2);
            color: #ff6b9d;
            padding: 10px 15px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            margin-top: 0px;
            margin-bottom: 10px;
            transition: all 0.4s ease;
            border: 1px solid rgba(255, 107, 157, 0.3);
        }

            .back-button:hover {
                background: rgba(255, 107, 157, 0.3);
                color: #fff;
                text-decoration: none;
                transform: translateX(-8px);
                box-shadow: 0 8px 25px rgba(255, 107, 157, 0.3);
            }

            .back-button i {
                margin-right: 10px;
                font-size: 1.2rem;
                transition: transform 0.3s ease;
            }

            .back-button:hover i {
                transform: translateX(-3px);
            }

    </style>
}

<div class="movie-details-container">
    <!-- Back Button -->
    <a href="/" class="back-button">
        <i class="fas fa-arrow-left me-2"></i>
        Back to Movies
    </a>

    <!-- Movie Header -->
    <div class="movie-header">
        <div class="movie-main-content">
            <!-- Movie Poster -->
            <div class="movie-poster-container">
                @if (!string.IsNullOrEmpty(Model.moviedetails?.Movie?.imageUrl))
                {
                    <img style="background-image: url('@Model.moviedetails.Movie.imageUrl');" alt="@Model.moviedetails.Movie.Title" class="movie-poster"
                         onerror="this.outerHTML='<div class=\'default-poster\'><i class=\'fas fa-film\'></i></div>'">
                }
                else
                {
                    <div class="default-poster">
                        <i class="fas fa-film"></i>
                    </div>
                }
            </div>

            <!-- Movie Information -->
            <div class="movie-info">
                <h1 class="movie-title">@(Model.moviedetails?.Movie?.Title ?? "Unknown Title")</h1>
                
                <!-- Rating and Grade -->
                <div class="movie-rating">
                    <div class="rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(Model.moviedetails?.Rating ?? 0))
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (i - 0.5 <= (Model.moviedetails?.Rating ?? 0))
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </div>
                    <span class="rating-value">@(Model.moviedetails?.Rating.ToString("F1") ?? "0.0")</span>
                    @if (Model.moviedetails?.Grade != null)
                    {
                        <span class="movie-grade">@Model.moviedetails.Grade.GradeName</span>
                    }
                </div>

                <!-- Movie Meta Information -->
                <div class="movie-meta">
                    <div class="meta-item">
                        <div class="meta-label">Duration</div>
                        <div class="meta-value">@(Model.moviedetails?.Duration ?? 0) min</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Language</div>
                        <div class="meta-value">@(Model.moviedetails?.Language ?? "N/A")</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Country</div>
                        <div class="meta-value">@(Model.moviedetails?.Country ?? "N/A")</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Release Date</div>
                        <div class="meta-value">@(Model.moviedetails?.ReleaseDate.ToString("MMMM dd, yyyy") ?? "N/A")</div>
                    </div>
                </div>

                <!-- Genres -->
                @if (Model.moviedetails?.Genres != null && Model.moviedetails.Genres.Any())
                {
                    <div class="genres-container">
                        <div class="genres-title">Genres</div>
                        <div class="genres-list">
                            @foreach (var genre in Model.moviedetails.Genres)
                            {
                                <span class="genre-tag">@genre.GenresName</span>
                            }
                        </div>
                    </div>
                }

                <!-- Description -->
                @if (!string.IsNullOrEmpty(Model.moviedetails?.Description))
                {
                    <div class="movie-description">
                        <div class="description-title">Synopsis</div>
                        <div class="description-text">@Model.moviedetails.Description</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Cast Section -->
    <div class="cast-section">
        <h2 class="cast-title">
            <i class="fas fa-users me-3"></i>Cast & Crew
        </h2>
        
        @if (Model.moviedetails?.Cast != null && Model.moviedetails.Cast.Any())
        {
            <div class="cast-grid">
                @foreach (var person in Model.moviedetails.Cast)
                {
                    <div class="cast-card">
                        @if (!string.IsNullOrEmpty(person.imageUrl))
                        {
                            <img src="@person.imageUrl" alt="@person.PersonName" class="cast-photo" 
                                 onerror="this.outerHTML='<div class=\'default-avatar\'><i class=\'fas fa-user\'></i></div>'">
                        }
                        else
                        {
                            <div class="default-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                        
                        <div class="cast-name">@(person.PersonName ?? "Unknown")</div>
                        
                        @if (person.Roles != null && person.Roles.Any())
                        {
                            <div class="cast-roles">
                                @foreach (var role in person.Roles)
                                {
                                    <span class="role-badge">@role.RoleName</span>
                                }
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(person.Biography))
                        {
                            <div class="cast-bio">
                                @(person.Biography.Length > 100 ? person.Biography.Substring(0, 100) + "..." : person.Biography)
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-cast">
                <i class="fas fa-users" style="font-size: 3rem; margin-bottom: 20px; color: #ffd700;"></i>
                <h3>No Cast Information Available</h3>
                <p>Cast details will be added soon.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Add smooth entrance animations
        window.addEventListener('load', function() {
            const elements = document.querySelectorAll('.cast-card, .movie-header');
            elements.forEach((element, index) => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    element.style.transition = 'all 0.6s ease';
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        // Add image loading error handling
        document.addEventListener('DOMContentLoaded', function() {
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                img.addEventListener('error', function() {
                    console.log('Image failed to load:', this.src);
                });
            });
        });
    </script>
}