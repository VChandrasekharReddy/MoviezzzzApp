@page
@model MoviezzClient.Pages.GradeModel
@{
    ViewData["Title"] = "Grades";
}

<h2>Add Grade</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Grade.GradeName" class="form-label">Grade Name</label>
        <input asp-for="Grade.GradeName" class="form-control" placeholder="Enter grade name" />
        <span asp-validation-for="Grade.GradeName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Grade</button>
</form>

<hr />

<h3>Existing Grades</h3>

@if (Model.gradeDtos != null && Model.gradeDtos.Any())
{
    <ul class="list-group">
        @foreach (var grade in Model.gradeDtos)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @if (Model.Grade.GradeId == grade.GradeId)
                {
                    <form method="post" asp-page-handler="Update">
                        <input type="hidden"  asp-for="Grade.GradeId" value="@grade.GradeId" />
                        <input type="text"  asp-for="Grade.GradeName" class="form-control me-2" value="@grade.GradeName" />
                        <button type="submit" class="btn btn-success btn-sm me-1">Submit</button>
                        <button type="submit" name="cancel" value="true" class="btn btn-secondary btn-sm">Cancel</button>
                    </form>
                }
                else
                {
                    <span>@grade.GradeName</span>
                    <form method="post" asp-page-handler="Edit" class="d-inline">
                        <input type="hidden" name="GradeId" value="@grade.GradeId" />
                        <button type="submit" class="btn btn-warning btn-sm">Update</button>
                    </form>
                }
            </li>
        }
    </ul>
}
else
{
    <p>No grades available.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
